//- _header.jade

block vars

// we have to check path first, to make sure we can reference to the right files
- rootPath = rootPath || '';

meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
title Trip.js 

meta(name='description', content='Trip.js is a plugin that can help you customize a tutorial trip easily with more flexibilities. (Based on jQuery)')
meta(name='viewport', content='width=device-width, initial-scale=1')
meta(property='og:image', content='http://eragonj.github.io/Trip.js/public/img/logo-tiny.png')

// styles
link(rel='stylesheet', href='#{rootPath}public/vendor/bootstrap/css/bootstrap.min.css')
link(rel='stylesheet', href='#{rootPath}public/vendor/bootstrap/css/bootstrap-responsive.min.css')
link(rel='stylesheet', href='#{rootPath}public/vendor/highlight/github.min.css')
link(rel='stylesheet', href='#{rootPath}public/css/base.css')
link(rel='stylesheet', href='#{rootPath}public/css/responsive.css')
link(rel='stylesheet', href='#{rootPath}dist/trip.min.css')

// 3rd parties 
script(src='#{rootPath}public/vendor/highlight/highlight.min.js')
script(src='#{rootPath}public/vendor/modernizr-2.6.2.min.js')
script(src='#{rootPath}public/vendor/jquery-1.8.3.min.js')
script(src='#{rootPath}public/vendor/bootstrap/js/bootstrap.min.js')
script(src='#{rootPath}public/js/global.js')

// tracking stuffs
script(src='#{rootPath}public/vendor/social/ga.js')
script(src='#{rootPath}public/vendor/social/fb.js')
script(src='#{rootPath}public/vendor/social/twitter.js')

// include trip
script(src='#{rootPath}dist/trip.js')
